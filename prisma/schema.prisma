generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{

  id Int @id @default(autoincrement())
  email String @unique
  name String?
  role Role @default(User)
  students Student[]


}

enum Role{
  User
  Admin
}
model Student{

  id Int @id @default(autoincrement())
  name String @db.VarChar(200)
  phoneNumber Int? @unique
  address String @db.VarChar(30)
  marks Int @db.Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userName User? @relation( fields: [userId], references: [id])
  userId Int?
  
}

model Quiz {
  id Int @id @default(autoincrement())
  title String @db.VarChar(200)
  description String @db.VarChar(200)
  questions Question[]
  category Category[]
  // category Category @relation(fields: [category_id], references: [id])
  // category_id Int

}

model Question{
  id Int @id @default(autoincrement())
  question String @db.VarChar(200)
  option1 String @db.VarChar(200)
  option2 String @db.VarChar(200)
  option3 String @db.VarChar(200)
  option4 String @db.VarChar(200)
  answer String @db.VarChar(200)
  quiz Quiz @relation(fields: [quiz_id], references: [id])
  quiz_id Int 
  category Category @relation(fields: [category_id], references: [id])
  category_id Int
}

model Category{
  id Int @id @default(autoincrement())
  title String @db.VarChar(200)
  questions Question[]
  quiz Quiz @relation(fields: [quiz_id], references: [id])
  quiz_id Int 
}
